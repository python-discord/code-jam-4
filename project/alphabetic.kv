#:kivy 1.10.1
<KeyboardKey@Button>:
    font_size: '15sp'
    size_hint_x: None
    size_hint_y: None
    width: 10
    height: 10

<AlphabeticHome>:
    canvas:
        Rectangle:
            pos: self.center_y - 5, 0
            size: 10, self.height
    GridLayout:
